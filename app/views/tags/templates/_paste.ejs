<form action="" class="paste_section">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label for="paste_price">Select Image</label>
                <div class="paste_images">
                    {{#each images}}
                        <div class="paste_image image" data-index="{{@index}}">
                                <img src="{{src}}" alt="">
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="inputs">
                <div class="form-group">
                    <label for="paste_price">Price</label>
                    <div class="row">
                        <div class="col-xs-8">
                            <input type="text" class="form-control" id="paste_price" placeholder="Enter price" value="{{price}}">
                        </div>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="paste_currency" placeholder="Enter currency" value="USD">
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <label for="paste_title">Title</label>
                    <input type="text" class="form-control" id="paste_title" placeholder="Enter price" value="{{title}}">
                </div>
                <div class="form-group">
                    <label for="paste_description">Description</label>
                    <textarea class="form-control" name="paste_description" id="paste_description" cols="30" rows="10" placeholder="Enter description">
                        {{description}}
                    </textarea>
                </div>
            </div>
        </div>
    </div>

</form>

